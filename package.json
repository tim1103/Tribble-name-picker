{
  "name": "random",
  "version": "1.1.5",
  "main": "main.js",
  "author": "tim1103",
  "description": "随机点名工具",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "linux": {
    "target": ["deb"],
    "category": "Education",
    "icon": "icons", 
    "maintainer": "tim1103",
    "description": "一个用于课堂随机点名的工具，支持多种抽选模式和随机座位分配",
    "desktop": {
      "Name": "随机点名",
      "Comment": "课堂随机点名工具",
      "StartupWMClass": "random"
    }
  },
  "build": {
    "appId": "com.tim1103.random",
    "productName": "随机点名",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "sudo-prompt": "^9.2.1"
  }
}